:root {
    // html的样式
    // 背景颜色
    --wang-bgcolor: #f5f5f5;
    // 所有字体颜色
    --wang-text-color: #000;
    // // 顶栏字体颜色
    // --wang-Top-text-color: #000;
    // // 顶栏背景颜色
    // --wang-Top-bg-color: #f5f5f5;
    // 顶栏悬浮颜色
    --wang-Top-hover-color: rgb(190, 186, 186);

    // 菜单字体颜色
    --wang-menu-color: #fff;


    // 菜单背景颜色
    --wang-menu-bgcolor: #65686a;


    // 缓存路由颜色
    --wang_router-color: #fff;

    // 边框颜色
    --wangwang-border: rgba(0, 0, 0, 0.1);

    // 菜单选中颜色
    --wang-menu-active: rgba(210, 203, 203, 0.6);
    --wang-menu-activetext: #b6d9f3;
    // --wang-menu-activetext: var(--wang-text-color);

    // 主题抽屉栏颜色
    --wangwang-drwer-bgcolor: #fff;


    --wang-color-primary-lighter: #5c9eea;
    --wang-color-success-lighter: #f0f9eb;
    --wang-color-warning-lighter: #fdf6ec;
    --wang-color-danger-lighter: #fef0f0;
    --wang-color--parimary-bg: #d6e9fb;
    --wang-bglefts: #1f84e2;

    // 首页背景颜色
    --wang-home-container-bg: rgba(220, 223, 227, 0.3);
    // 首页大组件背景颜色
    --wang-home-card-item-bg: white;
    //      // 首页大组件鼠标悬浮背景阴影
    --wang-home-card-item-hover-boxShdow: 0px 0px 20px 0px rgb(188, 179, 179);
    //      // 首页快捷导航工具背景颜色
    --wang-home-ShortcutTool-bg: #e6edf5;
    --wang-home-ShortcutTool-bg-hover: #cbd3e0;

    --wangwang-FontSize: 14px;

    .css-dev-only-do-not-override-i3mqvl.ant-menu-light .ant-menu-submenu-selected>.ant-menu-submenu-title {
        color: var(--wang-menu-color);
    }
}



html,
body,
#app {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -webkit-tap-highlight-color: transparent;
    background-color: var(--wang-bgcolor);
    font-size: var(--wangwang-FontSize);
    position: relative;
    --vxe-font-size: var(--wangwang-FontSize);


}

ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;

    &::-webkit-scrollbar {
        width: 8px;
        height: 8px;
        background-color: #f6f6f6;
        z-index: 1;
    }

    /*定义滚动条轨道
内阴影+圆角*/
    &::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
        border-radius: 2px;
        background-color: #f6f6f6;
    }

    /*定义滑块
内阴影+圆角*/
    &::-webkit-scrollbar-thumb {
        border-radius: 2px;
        // -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
        background-color: rgba(195, 181, 181, 0.7);
    }
}

.vxe-table {
    background-color: var(--wang-bgcolor);
    color: var(--wang-text-color);
    font-size: var(--wangwang-FontSize);

    .vxe-table--header-wrapper {
        background-color: var(--wang-bgcolor);
        color: var(--wang-text-color);
        font-size: var(--wangwang-FontSize);

        .vxe-header--row {
            border-bottom: 1px solid var(--wangwang-border);
            border-color: var(--wangwang-border);
            font-size: var(--wangwang-FontSize);

            .vxe-header--column {
                border-bottom: 1px solid var(--wangwang-border);
                background-image: linear-gradient(var(--wang-bgcolor)) !important;
                font-size: var(--wangwang-FontSize);
            }
        }
    }


    .vxe-body--row {
        background-color: var(--wang-bgcolor);
        color: var(--wang-text-color);
        border: 1px solid var(--wangwang-border);
        font-size: var(--wangwang-FontSize);

        .vxe-body--column {
            border-bottom: 1px solid var(--wangwang-border);
            background-image: linear-gradient(var(--wang-bgcolor)) !important;
            font-size: var(--wangwang-FontSize);
        }
    }

}